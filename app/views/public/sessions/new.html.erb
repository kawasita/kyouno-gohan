<div class="row">
  <div class="col-xs-12 mx-auto">
    <div class="text-center p-4">
      <h2><b>ログイン</b></h2>
    </div>

    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12" %>
      </div>
    
      <div class="field">
        <%= f.label :"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "col-12" %>
      </div>
    
      <div class="actions text-center p-3 pb-5">
        <%= f.submit "ログイン", class: "btn btn-success col-4 mr-5" %>
      </div>
    <% end %>
    
    <h3>会員登録がお済みでない方</h3>
    <div class="text-center p-3">
      <h5><%= render "public/shared/links" %><i class="far fa-hand-point-left"></i></h5>
    </div>
  </div>
</div>
