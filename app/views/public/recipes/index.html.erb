<div class="container">
  <div class="row">
    <div class="col-md-12 text-center mb-3 mt-3">
      <h3>今日のランキング<i class="fas fa-crown"></i></h3>
    </div>
    <% @recipes.each do |recipe| %>
      <div class="col-md-3">
        <div class="card">
          <%= image_tag recipe['foodImageUrl'], class: 'card-img-top recipe-img' %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to recipe['recipeTitle'].truncate(10), recipe_path(recipe['recipeId']) %>
            </h5>
            <div class="card-text">
              <div>
                <%= recipe['recipeDescription'].truncate(15) %>
              </div>
              <div class="text-right">
                <small><%= recipe['recipeCost'] %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>