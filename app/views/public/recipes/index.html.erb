<div class="container">
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-3">
        <%#= recipe.inspect %>
        <div class="card">
          <%= image_tag recipe['foodImageUrl'], class: 'card-img-top recipe-img' %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to recipe['recipeTitle'].truncate(10), recipe_path(recipe['recipeId']) %>
            </h5>
            <div class="card-text">
              <div>
                <%= recipe['recipeDescription'].truncate(15) %>
              </div>
              <div class="text-right">
                <small><%= recipe['recipeCost'] %></small>
              </div>
            </div>
          </div>




        </div>
      </div>
    <% end %>
  </div>
</div>