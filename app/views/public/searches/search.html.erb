<div class="container">
  <h2>今日何にしよう？</h2>

  <div class="row mb-4">
    <div class="col-md-6 mx-auto">
      <%= form_tag(search_path, method: :get) do %>
        <%= label_tag :keyword, '今日何にしよう？' %>

        <div class="form-group">
          <%# 検索ワードを引く次ぐためにparams[:keyword] %>
          <%= text_field_tag :keyword, params[:keyword], class: 'form-control' %>
        </div>

        <div class="row">
          <div class="col-md-6 mx-auto">
            <%= submit_tag '検索', class: 'btn btn-outline-secondary btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @results.each do |result| %>
      <div class="col-md-4 mb-2">
        <div class="card">
          <%= image_tag result.food_image_url, class: 'card-img-top recipe-img' %>
          <div class="card-body">
            <h5 class="card-title">
            <%= result.recipe_title.truncate(10) %>
            </h5>
            <div class="card-text">
              <div>
                <%= result.recipe_description.truncate(15) %>
              </div>
              <div class="text-right">
                <small><%= result.recipe_cost %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>