<table class="table table-bordered">
  <tbody class="col-md-10 mx-auto">
    <% recipe.recipe_comments.reverse.each do |recipe_comment| %>
    <tr>
      <td class="col-md-8 mx-auto"><%= simple_format(recipe_comment.comment) %>
      <td class="text-right">
        <small>
          <%= recipe_comment.user.nickname %>
          <%= recipe_comment.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H時%M分") %>
          <% if recipe_comment.user == current_user %>
            <%= link_to "削除", recipe_recipe_comment_path(recipe, recipe_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
          <% end %>
        </small>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>