<div class='container'>
  <div class='row'>
    <div class="col-sm-12">      
      <%= form_with(model:[recipe, recipe_comment], local: false) do |f| %>
      <table class="table table-bordered">
        <tr>
          <td>コメント</td>
          <td style="width: 20%"><%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", class: "w-100 comment-textarea" %></td>
        </tr>
        <%= f.submit, class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
      </table>
      <% end %>
    </div>
  </div>
</div>