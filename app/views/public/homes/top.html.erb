<div class="container">
  <div class="row">
    <%= link_to '新規登録', new_user_registration_path,class: "btn btn-secondary btn-sm btn-block" %>
  </div>
  <div class="row">
    <%= link_to 'ログイン', new_user_session_path ,class: "btn btn-secondary btn-sm btn-block" %>
  </div>
  <div class="row">
    <%= link_to 'ゲストログイン', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block", method: :post %>
  </div>
  <div class="row">
    <%= link_to 'レシピのindex', recipes_path, class: "btn btn-secondary btn-sm btn-block" %>
  </div>


  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_tag(search_path, method: :get) do %>
        <%= label_tag :keyword, '今日何にしよう？' %>

        <div class="form-group">
          <%# 検索ワードを引く次ぐためにparams[:keyword] %>
          <%= text_field_tag :keyword, params[:keyword], class: 'form-control' %>
        </div>

        <div class="row">
          <div class="col-md-6 mx-auto">
            <%= submit_tag '検索', class: 'btn btn-outline-secondary btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <h2>ランダムメニューBox</h2>
  <div class="row">
    <% @random_recipes.each do |random_recipe| %>
      <div class="col-md-3">
        <div class="card">
          <%= image_tag random_recipe.food_image_url, class: 'card-img-top recipe-img' %>
          <div class="card-body">
            <h5 class="card-title">
            <%= link_to random_recipe.recipe_title.truncate(10), recipe_path(random_recipe) %>
            </h5>
            <div class="card-text">
              <div>
                <%= random_recipe.recipe_description.truncate(13) %>
              </div>
              <div class="text-right">
                <small><%= random_recipe.recipe_cost %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <h2>新着コメントBox</h2>
  <div class="row">
    <% @random_comment_recipes.each do |random_comment_recipe| %>
      <div class="col-md-3">
        <div class="card">
          <%= image_tag random_comment_recipe.food_image_url, class: 'card-img-top recipe-img' %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to random_comment_recipe.recipe_title.truncate(10), recipe_path(random_comment_recipe) %>
            </h5>
            <div class="card-text">
              <%= random_comment_recipe.recipe_comments.last.comment %>
            </div>
            <div class="text-right">
              <small><%= random_comment_recipe.recipe_comments.last.user.name %></small><br>
              <small><%= random_comment_recipe.recipe_comments.last.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H時%M分") %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>


</div>