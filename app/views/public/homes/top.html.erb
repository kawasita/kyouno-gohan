<div class="container">

  <%= render "public/searches/search-form" %>

  <div class="col-md-12 text-center mb-3 mt-3">
    <h2 class="col-12 mt-4 border-bottom">ランダムメニューBox</h2>
  </div>
  
  <div class="row">
    <% @random_recipes.each do |random_recipe| %>
      <div class="col-md-3">
        <div class="card">
          <%= image_tag random_recipe.food_image_url, class: 'card-img-top recipe-img' %>
          <div class="card-body">
            <h5 class="card-title">
            <%= link_to random_recipe.recipe_title.truncate(10), recipe_path(random_recipe) %>
            </h5>
            <div class="card-text">
              <div>
                <%= random_recipe.recipe_description.truncate(13) %>
              </div>
              <div class="text-right">
                <small><%= random_recipe.recipe_cost %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-12 text-center mb-3 mt-3">
    <h2 class="col-12 mt-4 border-bottom">新着コメントBox</h2>
  </div>
  
  <div class="row">
    <% @random_comment_recipes.each do |comment_recipe| %>
      <div class="col-md-3">
        <div class="card">
          <%= image_tag comment_recipe.food_image_url, class: 'card-img-top recipe-img' %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to comment_recipe.recipe_title.truncate(10), recipe_path(comment_recipe) %>
            </h5>
            <div class="card-text">
              <%= comment_recipe.recipe_comments.last.comment %>
            </div>
            <div class="text-right">
              <small><%= comment_recipe.recipe_comments.last.user.nickname %></small><br>
              <small><%= comment_recipe.recipe_comments.last.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H時%M分") %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>