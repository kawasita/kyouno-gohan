<div class="containar">
  <div class="row">
    <div class="col-md-8 mx-auto mb-3 mt-3">
    <h3 class="col-12 mt-4 border-bottom">My店舗登録 / 一覧</h3><br>
    <%= form_with model: @myshop, method: :post  do |f|%>

      <table class="table table-borderless">
        <tr>
          <td>My店舗名</td>
          <td><%= f.text_field :shop_name, class: "form-control", placeholder: '○○スーパー' %></td>
        </tr>
        <tr>
          <td>ホームページURL<br /><small>＊登録したいスーパーのURLを貼り付けてください</small></td>
          <td colspan="2"><%= f.text_area :shop_url, class: "form-control", placeholder: 'http://www.tarounooisii...' %></td>
          <td></td>
        </tr>
        <tr>
          <td>メモ</td>
          <td colspan="2"><%= f.text_area :shop_memo, class: "form-control", placeholder: '月曜日は全品10%OFF' %></td>
          <td></td>
        </tr>
        <tr class="text-right">
          <td></td>
          <td></td>
          <td><%= f.submit "新規登録", class: "btn btn-success btn-right" %></td>
        </tr>
      </table>

    <% end %>

      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary">
            <th>My店舗名</th>
            <th>ホームページURL</th>
            <th>メモ</th>
            <th></th>
          </tr>
          <% @myshops.each do |myshop| %>
          <tr>
            <td><%= myshop.shop_name %></td>
            <td><%= link_to 'ホームページへ', myshop.shop_url, target: :_blank, rel: "noopener noreferrer" %></td>
            <% if myshop.shop_memo.blank? %>
              <td>メモする時は詳細ページへ！</td>
            <% else %>
              <td><%= myshop.shop_memo.truncate(20) %></td>
            <% end %>
            <td>
              <%= link_to "詳細ページ", myshop_path(myshop.id), class: "btn btn-success" %>
            </td>
          </tr>
          <% end %>
        </thead>
      </table>
      
    </div>
  </div>
</div>
