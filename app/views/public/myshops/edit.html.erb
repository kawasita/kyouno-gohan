<div class='container'>
  <div class='row'>
    <div class="col-md-8 mx-auto">
      <h1>My店舗編集</h1>
        <%= form_with model: @myshop do |f|%>
          <table class="table table-bordered">
            <tr>
              <td style="width: 20%" >My店舗名</td>
              <td style="width: 20%"><%= f.text_field :shop_name, class: "form-control" %></td>
              <td style="width: 20%"></td>
              <td style="width: 20%"></td>
            </tr>
            <tr>
              <td>ホームページURL</td>
              <td colspan="2"><%= f.text_area :shop_url, class: "form-control" %></td>
              <td></td>
            </tr>
            <tr>
              <td>メモ</td>
              <td colspan="2"><%= f.text_area :shop_memo, class: "form-control" %></td>
              <td></td>
            </tr>
          </table>
          <div class="form-group">
            <%= f.submit'情報更新！', class: 'btn btn-success' %>
          </div>
        <% end %>
        <%= link_to "削除", myshop_path(@myshop.id), method: :delete, class: "btn btn-danger" %>
        <%= link_to '戻る', myshop_path(@myshop.id), class: "btn btn-success" %>
    </div>
  </div>
</div>