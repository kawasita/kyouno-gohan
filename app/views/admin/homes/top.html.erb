<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="col-6">
        <h3 class="p-3">新着コメント一覧</h3>
      </div>
      <% if @comments.blank? %>
        新着コメントはありません
      <% else %> 
      <%= render "admin/homes/search-form" %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>レシピ</th>
            <th>コメント</th>
            <th>コメント日時</th>
            <th>コメント者</th>
            <th>削除しますか？</th>
          </tr>
        </thead>
        <div id="comment-delete">
          <%= render 'admin/homes/comment_index', comments: @comments %>
        </div>
      </table>
      <% end %>
    </div>
  </div>
  <div class="justify-content-center text-center">
    <%= paginate @comments %>
  </div>
</div>