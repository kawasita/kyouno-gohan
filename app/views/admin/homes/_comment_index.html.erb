<% if comments.blank? %>
  新着コメントはありません
<% else %> 
  <table class="table table-hover">
    <thead>
      <tr>
        <th>レシピ</th>
        <th>コメント</th>
        <th>コメント日時</th>
        <th>コメント者</th>
        <th>削除しますか？</th>
      </tr>
    </thead>
    <tbody>
    	<% comments.each do |recipe_comment| %>
      	<tr>
          <td>
            <%= link_to recipe_path(recipe_comment.recipe_id) do %>
              <%= recipe_comment.recipe.recipe_title.truncate(10) %>
            <% end %>
          </td>
          <td><%= recipe_comment.comment %></td>
          <td><%= recipe_comment.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H時%M分") %></td>
          <td>
            <%= link_to admin_user_path(recipe_comment.user.id) do %>
              <%= recipe_comment.user.nickname %>
            <% end %>
          </td>
          <td><%= link_to "削除", admin_home_path(recipe_comment), method: :delete, remote: true, class: "btn btn-danger pull-right commentdelete" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>