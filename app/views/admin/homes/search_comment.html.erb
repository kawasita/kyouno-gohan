<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="col-6">
        <h3 class="p-3">コメント検索結果</h3>
      </div>

      <%= render "admin/homes/search-form" %>
    
      <div class="row">
        <% unless @results.blank? %>
          <table class="table table-hover" id="comment-delete">
            <%= render 'admin/homes/comment_index', comments: @results %>
          </table>
        <% else %>
          該当するコメントはありませんでした
        <% end %>
      </div>
      
      <div class="justify-content-center text-center">
        <%= paginate @results %>
      </div>
      
   </div>
  </div>
</div>