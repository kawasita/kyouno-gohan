<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="row my-4">
        <div class="col-6">
          <h3 class="">
            <%= @user.name %>さんの会員詳細
          </h3>
        </div>
          <table class="table table-borderless">
            <tr>
              <th>会員ID</th>
              <th><%= @user.id %></th>
            </tr>
            <tr>
              <th>名前</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>ニックネーム</th>
              <th><%= @user.nickname %></th>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th><%= @user.email %></th>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <th>
                <% if @user.is_deleted == false %>
          	      <b class="text-success">　会員有効</b>
          		  <% elsif @user.is_deleted == true %>
          			  <b class="text-success">　退会</b>
          		  <% end %>
              </th>
            </tr>
            <tr>
              <th></th>
              <th><%= link_to "編集する", edit_admin_user_path, class:"btn btn-success ml-4" %></th>
            </tr>
          </table>
      </div>
    </div>
  </div>
</div>
