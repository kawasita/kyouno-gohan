<div class="row">
  <div class="col-xs-12 mx-auto">
    <div class="text-center p-4">
      <h2><b>管理者ログイン</b></h2>
  
    <%= render "admin/shared/error_messages", resource: resource %>

    <%= form_with model: @admin, url: session_path(resource_name) do |f| %>
      <div class="field mt-3">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-12', placeholder: 'sample@example.com' %>
      </div>

      <div class="field mt-3">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'col-12', placeholder: '○○○○○○' %>
      </div>

      <div class="actions text-center p-3 pb-5 mx-auto">
        <div class="col-4"></div>
          <%= f.submit "ログイン", class: 'btn btn-success px-4' %>
      </div>
    <% end %>
  </div>
</div>